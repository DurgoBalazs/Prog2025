import random

szamok = []


# 100 db elemű lista 1-99 közötti véletleszámokkal
for i in range (100):
    #...szám generálás
    rzsam = random.randint(1, 100)
    # szám elhelyezése a listába
    szamok.append(rzsam)
    
#Ellenörzés
print(szamok)

#kitalálandó szám beálilitása
kitalalando_szam =random.randint(0, len(szamok))

tipp = (input("Kérek egy egész pozitiv 1 és 100 közötti számott:"))

while(not tipp.isdecimal()):
    print("Egész számmal játsz!")
    tipp = input("Kérek egy egész számot 1 és 100 között")

tipp=int(tipp)

if(tipp < kitalalando_szam):
        print("A kitalándó szám nagyobb!")
elif(tipp > kitalalando_szam):
        print("A kitalálandó szám kisebb!")

while(tipp != kitalalando_szam):
    tipp=(input("Kérek egy egész pozitiv 1 és 100 közötti számott:"))
    while(not tipp.isdecimal()):
        print("Egész számmal játsz!")
        tipp = input("Kérek egy egész számot 1 és 100 között")
    tipp=int(tipp)
    if(tipp < kitalalando_szam):
        print("A kitalándó szám nagyobb!")
    elif(tipp > kitalalando_szam):
        print("A kitalálandó szám kisebb!")
print("Gratulálok, eltaláltad a számot!")